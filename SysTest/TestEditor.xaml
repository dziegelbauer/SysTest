<Window x:Class="SysTest.TestEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SysTest"
        mc:Ignorable="d"
        Title="TestEditor" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem x:Name="IcmpTab" Header="ICMP">
                <Grid Background="#FFE5E5E5">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Test Name:"/>
                        <TextBox TextWrapping="NoWrap" Text="" Width="120" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Padding="0,3,0,0" Margin="0,3,0,0" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
